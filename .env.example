# ===========================================
# CS 1.6 Master Server Configuration
# ===========================================

# Server Settings
NODE_ENV=production
UDP_PORT=27010
UDP_HOST=0.0.0.0

# API Configuration
API_URL=http://example.com/api/servers.php
API_UPDATE_INTERVAL=1200000

# Connection Logging (optional)
ENABLE_CONNECTION_LOGGING=true
CONNECTIONS_API_URL=
LOG_FILE=connections.log

# Local Server List
LOCAL_SERVERS_FILE=local-servers.json
LOCAL_SERVERS_PRIORITY=high

# Rate Limiting
MAX_CONNECTIONS_PER_IP=100
RATE_LIMIT_WINDOW_MS=60000

# Performance Tuning
MAX_TRACKED_CONNECTIONS=100000
CONNECTION_TTL_MS=86400000
